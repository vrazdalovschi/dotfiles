[user]
    name = Vasile Razdalovschi

[core]
    pager = delta
    editor = zed --wait

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    side-by-side = true
    line-numbers = true
    syntax-theme = OneHalfDark

[merge]
    conflictstyle = zdiff3

[diff]
    colorMoved = default

[pull]
    rebase = true

[init]
    defaultBranch = main

[push]
    autoSetupRemote = true
