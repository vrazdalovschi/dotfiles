[user]
    name = Vasile Razdalovschi
    email = vasile.razdalovschi@gmail.com

[core]
    pager = delta
    editor = zed --wait
    excludesfile = ~/.gitignore_global

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    side-by-side = true
    line-numbers = true
    syntax-theme = OneHalfDark

[merge]
    conflictstyle = zdiff3

[diff]
    colorMoved = default

[pull]
    rebase = true

[init]
    defaultBranch = main

[push]
    autoSetupRemote = true

[gpg]
    format = ssh

[user]
    signingkey = ~/.ssh/vrazdalovschi.pub

[commit]
    gpgsign = true

[tag]
    gpgsign = true
